{
	"name": "threejs-thingy",
	"version": "0.1.0",
	"description": "A simple threejs starter",
	"main": "Gruntfile.js",
	"author": {
		"name": "Adam Trickett",
		"email": "me@adamtrickett.com",
		"url": "https://adamtrickett.com"
	},
	"scripts": {
		"build:js": "node _esbuild/build.config.mjs",
		"build:css": "tailwindcss src/css/main.css -o dist/threejs-thingy.css",
		"watch:js": "node _esbuild/watch.config.mjs",
		"watch:css": "tailwindcss src/css/main.css -o dist/threejs-thingy.css --watch",
		"watch": "concurrently \"npm run watch:js\" \"npm run watch:css\"",
		"sync": "browser-sync start --proxy \"$npm_config_hostname\"  --host \"$npm_config_hostname\" --no-inject-changes --files=\"../\"",
		"watch:sync": "concurrently \"npm run watch\" \"npm run sync\""
	},
	"license": "UNLICENSED",
	"config": {
		"project": "threejs-thingy",
		"target": "",
		"url": "https://adamtrickett.com"
	},
	"dependencies": {
		"@plackyfantacky/three.infinitegridhelper": "^1.0.1",
		"three": "^0.155.0"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.19",
		"browser-sync": "^3.0.2",
		"concurrently": "^8.2.2",
		"esbuild": "^0.23.0",
		"postcss": "^8.4.39",
		"postcss-import": "^16.1.0",
		"postcss-nested": "^6.0.1",
		"postcss-nested-ancestors": "^3.0.0",
		"tailwindcss": "^3.4.4"
	}
}
